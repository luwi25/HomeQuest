<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#F2F4FF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#B8C3FF">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_2"
            android:scaleType="centerInside"
            android:background="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout_profile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/roundtext"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_4"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/button_edit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Edit"
                android:textSize="16sp"
                android:clickable="false"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button" />


        </LinearLayout>


        <TextView

            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joan Ocampo Hernaez"
            android:layout_marginStart="20dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ingkaonnakajoy@gmail.com"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="20dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textview_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I love Valorant"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textview_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University of Cebu"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout_edit"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="@drawable/profileround"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_newname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:layout_marginHorizontal="2dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/edittext_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:textColorHint="#80FFFFFF"
                android:visibility="invisible"
                android:textStyle="bold"
                android:hint="Enter username"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_newemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:layout_marginHorizontal="2dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:textColorHint="#80FFFFFF"
                android:textStyle="bold"
                android:visibility="invisible"
                android:hint="Enter username"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_newbio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio: "
                android:visibility="invisible"
                android:layout_marginHorizontal="2dp"
                android:textStyle="bold"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/edittext_bio"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:textColorHint="#80FFFFFF"
                android:textStyle="bold"
                android:visibility="invisible"
                android:hint="hahahahahahahah"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_newschool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School: "
                android:layout_marginHorizontal="2dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/edittext_school"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:textColorHint="#80FFFFFF"
                android:textStyle="bold"
                android:visibility="invisible"
                android:hint="hahahahahahahah"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_roundedit"
                android:text="Cancel"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"/>

            <Button
                android:id="@+id/button_save"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:background="@drawable/button_roundedit"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:text="Save"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>